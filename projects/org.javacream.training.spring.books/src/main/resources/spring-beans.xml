<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean class="org.javacream.store.impl.SimpleStoreService" id="simpleStoreService">
		<property name="stock" value="42"></property>
	</bean>
	<bean class="org.javacream.books.isbngenerator.impl.RandomIsbnGenerator"
		id="randomIsbnGenerator">
		<property name="countryCode" value="-de"></property>
		<property name="prefix" value="TEST:"></property>
	</bean>
	<bean class="org.javacream.books.warehouse.impl.MapBooksService"
		id="mapBooksService">
		<property name="isbnGenerator" ref="randomIsbnGenerator" />
		<property name="storeService" ref="simpleStoreService" />
	</bean>
</beans>
